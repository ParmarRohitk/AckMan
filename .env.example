# Neon Database Configuration
# Copy this file to .env.development.local for local development
# Update the DATABASE_URL with your actual Neon credentials

# For local development: Use production branch
# Format: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require&options=project%3D[project-id]%2Fbranch%3Dproduction
DATABASE_URL="postgresql://user:password@endpoint/database?sslmode=require&options=project%3Dproject-id%2Fbranch%3Dproduction"

# JWT Secret for authentication
JWT_SECRET="your-secret-key-change-this"

# Note: For Vercel deployment, set DATABASE_URL to use the main branch:
# DATABASE_URL="postgresql://user:password@endpoint/database?sslmode=require&options=project%3Dproject-id%2Fbranch%3Dmain"
